datasource db {
  provider = "postgresql"
  url      = env("TAKIN_POSTGRES_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                          String   @id @default(uuid())
  name                        String?
  email                       String
  image                       String?
  role                        Int      @default(0)
  level                       Int      @default(0)
  subscription_credits        Int?     @default(0)
  extra_credits              Int?     @default(0)
  subscription_purchased_credits Int?  @default(0)

  @@map("user")
}
